<div id="wiki-wrapper" class="results">
<div id="head">
  <h1>Suchergebnisse für <strong>{{query}}</strong></h1>
  <ul class="actions">
    <li class="minibutton">
      {{>searchbar}}
    </li>
    <li class="minibutton"><a href="{{base_url}}/"
       class="btn btn-primary btn-sm">Startseite</a></li>
  </ul>
</div>
<div id="results">

{{#has_results}}
  <ul>
    {{#results}}
    <li>
      <a href="{{base_url}}/{{name}}">{{name}}</a>
      <span class="count">({{count}} Übereinstimmungen)</span>
    </li>
    {{/results}}
  </ul>
{{/has_results}}

{{#no_results}}
  <p id="no-results">
    Es gibt keine Ergebnisse für Deine Suche <strong>{{query}}</strong>.
  </p>
{{/no_results}}

</div>
<div id="footer">
  <ul class="actions">
    <li class="minibutton"><a href="#" class="btn btn-primary btn-sm">Zum Anfang der Seite</a></li>
  </ul>
</div>
</div>

